load("@npm//:defs.bzl", "npm_link_all_packages")
load("@aspect_rules_js//js:defs.bzl", "js_binary")
load("@aspect_rules_js//js:defs.bzl", "js_library")
load("@aspect_rules_ts//ts:defs.bzl", "ts_project")
load(":graphql-codegen.bzl", "gqlgen")
load("@jest//jest:defs.bzl", "jest_test")

npm_link_all_packages()

filegroup(
    name = "schema",
    srcs = ["schema.graphql"],
)

js_binary(
    name = "launcher",
    data = [
        ":node_modules/typescript",
        "//:node_modules/@graphql-codegen/cli",
        "//:node_modules/@graphql-codegen/typescript",
    ],
    entry_point = "graphql-codegen-launcher.mjs",
    visibility = ["//visibility:public"],
)

ts_project(
    name = "thing",
    srcs = [
        "main.ts",
        "thing.ts",
    ],
    deps = [
        ":gen_ts",
        "//:node_modules/@types/lodash",
        "//:node_modules/left-sad",
        "//:node_modules/lodash",
    ],
    declaration = True,
)

ts_project(
    name = "thing_test_src",
    srcs = glob(["*.spec.ts"]),
    deps = [
        ":thing",
        "//:node_modules/@types/jest",
    ],
    declaration = True,
)

js_library(
    name = "jest_config",
    srcs = ["jest.config.js"],
    visibility = ["//visibility:public"],
)

jest_test(
    name = "thing_test",
    config = ":jest_config",
    data = [
        ":thing_test_src",
    ],
    # This target can be made faster by disabling the sandbox & by disabling the fs patches
    # tags = ["local"],
    # patch_node_fs = False,
)

js_binary(
    name = "thing_js",
    data = [
        "thing",
    ],
    entry_point = "main.js",
)

gqlgen(
    name = "gen",
    out = "types.ts",
    config = {
        "plugins": ["typescript"],
    },
    schemas = ":schema",
)
